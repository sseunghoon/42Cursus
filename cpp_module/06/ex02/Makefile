NAME	=	Base

SRCS	=	main.cpp Base.cpp A.cpp B.cpp C.cpp
OBJS	=	$(SRCS:%.cpp=%.o)
HEADER	=	Base.hpp A.hpp B.hpp C.hpp

CXX		=	c++
CXXFLAGS	=	-Wall -Werror -Wextra -std=c++98

all		:	$(NAME)

$(NAME)	:	$(OBJS)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)

%.o	:%.c
	$(CXX) $(CXXFLAGS) -c $< -o $@ -include $(HEADER)

clean	:
	rm -rf $(OBJS)

fclean	: clean
	rm -rf	$(NAME)

re		: fclean all

.PHONY: all clean fclean re
